# ========================================
# РЕЖИМ РАБОТЫ
# ========================================
NODE_ENV=development               # development | production
PORT=5063                          # Порт backend сервера
HOST=localhost                     # localhost | 0.0.0.0 (для сети)
FRONTEND_URL=http://localhost:3000 # Фронтенд URL (меняется в зависимости от среды)

# ========================================
# БАЗА ДАННЫХ
# ========================================
# Для локального PostgreSQL
DB_HOST=localhost              # localhost | 127.0.0.1
DB_PORT=5432                   # Порт PostgreSQL
DB_NAME=car_catalog            # Имя базы данных
DB_USER=postgres               # Имя пользователя
DB_PASSWORD=password           # Пароль пользователя

# ========================================
# АУТЕНТИФИКАЦИЯ
# ========================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h             # 24h | 7d | 30d
BCRYPT_SALT_ROUNDS=10          # 10-12 для безопасности